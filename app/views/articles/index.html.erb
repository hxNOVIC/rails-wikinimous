<div class="d-flex justify-content-between">
  <h1 class="text-center">Articles</h1>
  <p class="text-center" id="article"><%=link_to 'New Article', 'articles/new', class: "btn btn-success" %></p>
</div>

<% @articles.each do |article| %>
  <ul class="list-group">

    <li class="list-group-item text-center"><%= link_to article.title, article_path(article) %></li>
  </ul>
  <% end %>

